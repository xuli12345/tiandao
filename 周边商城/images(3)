<script src="//ossweb-img.qq.com/images/js/milo/util/jquery-min.js"></script>
<script type="text/javascript">

    //大广告
    var currentindex=1;
    function changeflash(i) {
        var length = $(".flash_bar div").length;
        if(i > length){
            return;
        }
        currentindex=i;
        for (j=1;j<=length;j++){
            if (j==i){
                //$("#flash"+j).fadeIn("normal");
                $("#flash"+j).css("display","block");
                $("#f"+j).removeClass();
                $("#f"+j).addClass("dq");
            }else{
                $("#flash"+j).css("display","none");
                $("#f"+j).removeClass();
                $("#f"+j).addClass("no");
            }
        }
    }
    function startAm(){
        timerID = setInterval("timer_tick()",5000);
    }
    function stopAm(){
        clearInterval(timerID);
    }
    function timer_tick() {
        //自动播放
        var length = $(".flash_bar div").length;
        currentindex=currentindex>=length?1:(currentindex+1);
        changeflash(currentindex);
    }

    $(document).ready(function(){
        $(".flash_bar div").mouseover(
            function(){
                stopAm();
            }).mouseout(
            function(){
                startAm();
            });
        startAm();

        //滚动条事件
        $(window).scroll(function(){
            var scroH = $(this).scrollTop();
            var winH = 400;
            if(scroH>=winH){
                $(".top-action").addClass("top-fixed");
            }else if(scroH<winH){
                $(".top-action").removeClass("top-fixed");
            }
        })
    })
    //公告导航栏上下滚动
    function autoScroll(){
        var scrtimer; //定时器
        var $this = $(".notice-txt");
        function scroll(obj){
            var scroll = obj.find("ul:first");
            var lineHeight = scroll.find("li:first").height();
            scroll.animate({"margin-top": -lineHeight +"px" }, 600, function(){scroll.css({"margin-top": "0"}).find("li:first").appendTo(scroll);});
        }

        //鼠标悬停
        $this.hover(function(){
            clearInterval(scrtimer);//清理定时器
        },function(){
            scrtimer = setInterval(function(){scroll($this);}, 2000)
        }).trigger("mouseout")
    }

</script>


